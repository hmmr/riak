#!/bin/sh
# postinst script for Riak
#
# see: dh_installdeb(1)

set -e

# create group
if ! getent group riak_ts >/dev/null; then
        addgroup --system riak_ts
fi

# create user
if ! getent passwd riak_ts >/dev/null; then
        adduser --ingroup riak_ts \
                --home /var/lib/riak \
                --disabled-password \
                --system --shell /bin/bash --no-create-home \
                --gecos "Riak TS Database" riak_ts
fi

for i in lib log; do
    chown -R riak_ts:riak_ts /var/$i/riak-ts
done
chown -R riak_ts:riak_ts /etc/riak-ts

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
